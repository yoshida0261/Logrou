<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainActivity">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.stah.logrou.ui.main.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" >
        <action
            android:id="@+id/action_mainActivity_to_addActivity"
            app:destination="@id/addActivity" />
        <action
            android:id="@+id/action_mainActivity_to_actionActivity"
            app:destination="@id/actionActivity" />
        <action
            android:id="@+id/action_mainActivity_to_detailActivity"
            app:destination="@id/detailActivity" />
    </activity>
    <activity
        android:id="@+id/detailActivity"
        android:name="com.stah.logrou.ui.detail.DetailActivity"
        android:label="activity_detail"
        tools:layout="@layout/activity_detail" />
    <activity
        android:id="@+id/addActivity"
        android:name="com.stah.logrou.ui.add.AddActivity"
        android:label="activity_add"
        tools:layout="@layout/activity_add" />
    <activity
        android:id="@+id/actionActivity"
        android:name="com.stah.logrou.ui.action.ActionActivity"
        android:label="activity_action"
        tools:layout="@layout/activity_action" />
</navigation>
